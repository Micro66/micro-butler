{
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": [
        "*"
      ],
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "allowedHeaders": [
        "Content-Type",
        "Authorization"
      ]
    }
  },
  "api": {
    "timeout": 30000,
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    }
  },
  "security": {
    "enableSecurity": false,
    "commandWhitelist": [],
    "commandBlacklist": [
      "rm",
      "sudo",
      "chmod",
      "chown"
    ],
    "allowedPaths": [],
    "blockedPaths": [
      "/etc",
      "/usr/bin",
      "/bin"
    ],
    "allowedTools": [],
    "blockedTools": [],
    "enforceCommandWhitelist": false,
    "blockSensitiveDirectories": true
  },
  "storage": {
    "type": "file",
    "path": "./data",
    "maxTaskHistory": 1000,
    "cleanupInterval": 86400000
  },
  "mcp": {
    "enabled": true,
    "servers": {},
    "globalConfigPath": "~/.micro-butler/mcp/servers.json",
    "projectConfigPath": "./.mcp/servers.json"
  },
  "logging": {
    "level": "info",
    "format": "simple",
    "file": {
      "enabled": false,
      "level": "info",
      "filename": "logs/app.log",
      "maxSize": "10m",
      "maxFiles": 5
    },
    "console": {
      "enabled": true,
      "level": "info"
    }
  },
  "defaultApiConfiguration": {
    "provider": "anthropic",
    "apiKey": "your-anthropic-api-key",
    "apiModelId": "claude-3-5-sonnet-20241022",
    "maxTokens": 8192,
    "temperature": 0.7
  },
  "apiConfigurations": {
    "anthropic": {
      "apiKey": "your-anthropic-api-key",
      "apiModelId": "claude-3-5-sonnet-20241022",
      "maxTokens": 8192,
      "provider": "anthropic"
    },
    "openai": {
      "provider": "openai",
      "apiModelId": "gpt-4",
      "apiKey": "your-openai-api-key",
      "apiBaseUrl": "https://api.openai.com/v1",
      "maxTokens": 4096,
      "temperature": 0.7
    },
    "google": {
      "provider": "google",
      "apiModelId": "gemini-pro",
      "apiKey": "your-google-api-key",
      "maxTokens": 4096,
      "temperature": 0.7
    },
    "ollama": {
      "provider": "ollama",
      "apiModelId": "llama2",
      "apiBaseUrl": "http://localhost:11434",
      "maxTokens": 4096,
      "temperature": 0.7
    },
    "siliconflow": {
      "provider": "siliconflow",
      "apiModelId": "deepseek-ai/DeepSeek-V2.5",
      "apiKey": "your-siliconflow-api-key",
      "apiBaseUrl": "https://api.siliconflow.cn/v1",
      "maxTokens": 4096,
      "temperature": 0.7
    }
  },
  "mcpServers": {
    "duckduckgo-search": {
      "command": "/usr/local/bin/npx",
      "args": ["-y", "duckduckgo-mcp-server"],
      "type": "stdio",
      "disabled": false,
      "timeout": 30,
      "alwaysAllow": ["duckduckgo_web_search"],
      "disabledTools": [],
      "toolAliases": {
        "search": "duckduckgo_web_search"
      }
    }
  }
}